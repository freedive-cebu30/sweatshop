  <div class="field">
    <%= f.label :question1 %><br />
    <%= f.text_field :question1 %>
  </div>
  <div class="field">
    <%= f.label :question2 %><br />
    <%= f.text_field :question2 %>
  </div>
  <div class="field">
    <%= f.label :question3 %><br />
    <%= f.text_field :question3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
