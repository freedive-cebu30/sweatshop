			<label>楽しくない<%= f.radio_button :enjoyment, Evaluation::ENJOYMENT.index("楽しくない") %></label>
		</div>
		<div class="field">
			<%= f.label :learn %><br />
			<label>学べてる<%= f.radio_button :learn, Evaluation::LEARN.index("学べてる"), :checked=>true %></label>
			<label>学べていない<%= f.radio_button :learn, Evaluation::LEARN.index("学べていない") %></label>
		</div>
		<div class="field">
			<%= f.label :position %><br />
			<label>部下0人<%= f.radio_button :position, Evaluation::POSITION.index("0"), :checked=>true %></label>
