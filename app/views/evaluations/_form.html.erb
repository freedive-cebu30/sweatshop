			<label>13時間<%= f.radio_button :working_hours, Evaluation::WORKING_HOURS.index("13") %></label>
			<label>14時間<%= f.radio_button :working_hours, Evaluation::WORKING_HOURS.index("14") %></label>
			<label>15時間<%= f.radio_button :working_hours, Evaluation::WORKING_HOURS.index("15") %></label>
		</div>
		<div class="field">
			<%= f.label :holiday_days %><br />
			<label>4日<%= f.radio_button :holiday_days, Evaluation::HOLIDAY_DAYS.index("4") %></label>
