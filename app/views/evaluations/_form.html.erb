			<label>部下3-5人<%= f.radio_button :position, Evaluation::POSITION.index("3-5") %></label>
			<label>部下6-10人<%= f.radio_button :position, Evaluation::POSITION.index("6-10") %></label>
			<label>部下11-20人<%= f.radio_button :position, Evaluation::POSITION.index("11-20") %></label>
